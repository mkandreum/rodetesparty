# Habilitar compresi√≥n
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# Headers de seguridad
<IfModule mod_headers.c>
    # PWA - Service Worker
    Header set Service-Worker-Allowed "/"
    
    # MIME types correctos
    <FilesMatch "\.(js)$">
        Header set Content-Type "application/javascript"
    </FilesMatch>
    
    <FilesMatch "manifest\.json$">
        Header set Content-Type "application/manifest+json"
    </FilesMatch>
    
    <FilesMatch "service-worker\.js$">
        Header set Content-Type "application/javascript"
        Header set Cache-Control "no-cache, no-store, must-revalidate"
    </FilesMatch>
    
    # Cache para assets
    <FilesMatch "\.(jpg|jpeg|png|gif|webp|svg|ico)$">
        Header set Cache-Control "public, max-age=2592000"
    </FilesMatch>
    
    <FilesMatch "\.(css|js)$">
        Header set Cache-Control "public, max-age=604800"
    </FilesMatch>
</IfModule>

# Permitir CORS para fonts y assets si es necesario
<IfModule mod_headers.c>
    <FilesMatch "\.(ttf|ttc|otf|eot|woff|woff2|font.css|css|js)$">
        Header set Access-Control-Allow-Origin "*"
    </FilesMatch>
</IfModule>

# Tipos MIME
AddType application/manifest+json .webmanifest .json
AddType application/javascript .js
AddType image/svg+xml .svg .svgz
AddType image/webp .webp

# Rewrite rules para permitir URLs amigables
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /
    
    # No reescribir si es un archivo real
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    
    # Exception para service worker y manifest
    RewriteCond %{REQUEST_URI} !^/service-worker\.js$
    RewriteCond %{REQUEST_URI} !^/manifest\.json$
</IfModule>
